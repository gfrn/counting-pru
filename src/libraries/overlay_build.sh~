#!/bin/sh

export SLOTS=/sys/devices/bone_capemgr.9/slots
export PINS=/sys/kernel/debug/pinctrl/44e10800.pinmux/pins

echo "Compilando Device Tree Overlay..."

dtc -O dtb -o CountLNLS-00A0.dtbo -b 0 -@ CountLNLS-00A0.dts
dtc -O dtb -o CountBergoz-00A0.dtbo -b 0 -@ CountBergoz-00A0.dts

cp CountLNLS-00A0.dtbo /lib/firmware
cp CountBergoz-00A0.dtbo /lib/firmware

rm CountLNLS-00A0.dtbo
rm CountBergoz-00A0.dtbo
